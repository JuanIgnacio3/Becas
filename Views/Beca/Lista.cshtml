@model IEnumerable<Becas.Models.SolicitudBeca>
@{
    ViewData["Title"] = "Lista de Solicitudes";
}

<div class="contenedor-lista">

    <div class="cabecera-lista text-center mb-4">
        <h2 class="titulo-lista">Solicitudes registradas en esta sesión</h2>
    </div>

    <div class="envoltorio-tabla">
        <table class="tabla-beca">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Cédula</th>
                    <th>Cantón</th>
                    <th>Tuvo beca</th>
                    <th>Detalle</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreEstudiante</td>
                            <td>@item.Cedula</td>
                            <td>@item.Canton</td>
                            <td>@(item.TuvoBecaAnterior ? "Sí" : "No")</td>
                            <td>@item.Detalle</td>

                            <td class="celda-acciones">
                                <a href="@Url.Action("Create", "Beca")"
                                   class="btn-accion btn-extra">
                                    Solicitar otra
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="sin-datos">No hay solicitudes registradas aún.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="zona-botones mt-3">
        <a class="btn-volver" href="@Url.Action("Create", "Beca")">Volver al formulario</a>
    </div>

</div>
