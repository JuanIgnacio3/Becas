@model IEnumerable<Becas.Models.SolicitudBeca>
@{
    ViewData["Title"] = "Lista de Solicitudes";
}

@* Solo administradores o revisores pueden ver la lista *@
@if (User.IsInRole("Administrador") || User.IsInRole("Revisor"))
{
    <div class="contenedor-lista">

        <h2 class="titulo-lista my-4">Solicitudes registradas en esta sesión</h2>

        <div class="envoltorio-tabla">
            <table class="tabla-beca">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Cédula</th>
                        <th>Cantón</th>
                        <th>Tuvo beca</th>
                        <th>Detalle</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.NombreEstudiante)</td>
                                <td>@Html.DisplayFor(m => item.Cedula)</td>
                                <td>@Html.DisplayFor(m => item.Canton)</td>
                                <td>@(item.TuvoBecaAnterior ? "Sí" : "No")</td>
                                <td>@Html.DisplayFor(m => item.Detalle)</td>

                                <td class="celda-acciones">
                                    <a href="@Url.Action("Create", "Beca")" class="btn-accion btn-extra">Solicitar otra</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="sin-datos">No hay solicitudes registradas aún.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a class="btn-volver" href="@Url.Action("Create", "Beca")">Volver al formulario</a>
    </div>
}
else
{
    @* Vista para usuarios sin permisos *@
    <div class="contenedor-lista">
        <h2 class="titulo-lista my-4">Acceso no autorizado</h2>
        <p class="text-muted">No tienes permisos para ver la lista de solicitudes.</p>

        <a class="btn-volver" href="@Url.Action("Create", "Beca")">Volver al formulario de solicitud</a>
    </div>
}
